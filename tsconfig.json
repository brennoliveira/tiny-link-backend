{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@Web/*"    : ["./src/Web/*"],
      "@Models/*" : ["./src/Models/*"],
      "@Infra/*"  : ["./src/Infra/*"],
      "@Shared/*" : ["./src/Shared/*"]
    },
    "target": "ES2021",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames" : true,
    "emitDecoratorMetadata"            : true,
    "experimentalDecorators"           : true,
    "resolveJsonModule"                : true,
    "allowJs"                          : true,
    "skipLibCheck"                     : true,
  },
}